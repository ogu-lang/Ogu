module Recursives

ackermann m n
  | m == 0 = n + 1
  | (m > 0) && (n == 0) = ackermann (m - 1) 1
  | (m > 0) && (n > 0)  = ackermann (m - 1) (ackermann m (n - 1))


siracusa n
  | n == 1 = 4
  | n == 2 = 1
  | n % 2 == 0 = siracusa (n / 2)
  | otherwise = siracusa (n * 3 + 1)


(ackermann 2 3) + (siracusa 11)
